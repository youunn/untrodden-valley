#!/usr/bin/env bash

CP_CRATE="$(dirname "$0")/../cp/"

function gen_source() {
  if [[ -z "$1" ]]; then
      echo "No file name provided"
      exit 1
  fi
  if [[ ! -f "$1" ]]; then
      echo "File $1 does not exist"
      exit 1
  fi

  cat "$1"

  echo ""
  echo "#[allow(dead_code)]"
  echo "mod cp {"

  echo "pub mod cio {"
  cat $CP_CRATE/src/cio.rs
  echo "}"

  if [[ "$2" == "cmp" ]]; then
      echo "pub mod cmp {"
      cat $CP_CRATE/src/cmp.rs
      echo "}"
  fi

  echo "}"
}

function show_help() {
  echo "General:"
  echo "  gen [file] [mod]"
  echo "Module:"
  echo "  cmp                      - Comparison module"
  echo "Commands:"
  echo "  help                     - Display help message"
}

function main() {
  command=$1
  case $command in
    "help" | "-h" | "--help") show_help ;;
    *) gen_source $1 $2 ;;
  esac
}

main "$@"
